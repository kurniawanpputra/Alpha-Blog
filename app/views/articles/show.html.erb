<h2 align="center"><%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <b>
    Created by: <%= @article.user.username %> on 
    <%= @article.created_at.to_date %>
  </b>
  <hr>
  <%= simple_format(@article.description) %>
  <hr>
  <div class="article-actions">
      <%= link_to 'Edit Article', edit_article_path(@article), class:"btn btn-xs btn-primary" %>
      <%= link_to 'Show All Article', articles_path, class:"btn btn-xs btn-success" %>
      <%= link_to 'Delete Article', article_path(@article), method: :delete, data: {confirm: "Are you sure? This action can't be undone."}, class:"btn btn-xs btn-danger" %>
  </div>
</div>
